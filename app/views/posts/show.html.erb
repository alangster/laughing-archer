<h1><%= @post.title %></h1>
<h3><%= @post.author.name %></h3>
<p><%= @post.text %></p>
<ul>
	<% @post.comments.each do |comment| %>
		<li><%= comment.text %> - <%= comment.user.name %></li>
	<% end %>
</ul>
 <%= form_for [@post, @comment], action: :post_comments do |f| %>
 <!-- <#%= form_for @comment, url: {action: :post_comments} do |f| %> -->
	<%= f.label :comment %>
	<%= f.text_field :text %>
	<%= f.submit "Leave Comment" %>
<% end %>